{% set componentName = "wiloke-hero-slider" %}
{% set componentFile = 'component2.twig' %}


{% if content|length == 0 %}
	<div class="{{ componentName }}-wrapper">
		<div class="p:40px fz:20px ta:center bgc:#eee cur:pointer">Click here to set up the slider</div>
	</div>
{% else %}
	<div class="{{ componentName }}-wrapper lh:1.5">
			<div class="wil-animated-slider">
				<div class="wil-animated-slider__inner pos:relative mih:450px mih:700px@md mih:800px@lg mah:100vh@lg">
					{% for item in content %}
						<div class="swiper-slide wil-animated-slider__slide mih:100%! d:flex! fld:column!">
							{% include "Shared/" ~ componentFile %}
						</div>
					{% endfor %}
					<div class="wil-animated-slider__pagination pos:absolute z:9 t:50% r:10px trf:translateX(-50%) fld:column" data-animated-pagination-active-class="h:26px! op:1!">
						{% for item in content %}
							<div class="wil-animated-slider__pagination-item wiloke-2__pagination-item bgc:#fff op:0.5 w:8px h:8px bdrs:4px m:5px trs:0.3s" style="{{colorLightVariable}}"></div>
						{% endfor %}
					</div>

					<div class="wil-animated-slider__arrow">
						<div class="pos:absolute r:pfs(54px,74px) b:2px z:9  d:none@+md">
							<button class="wil-animated-slider__arrow-left wiloke-2__arrow-left fz:22px w:pfs(50px,70px) trs:0.4s h:pfs(50px,70px) cur:pointer" style="{{colorPrimaryVariable}} {{colorLightVariable}} {{colorGray9Variable}}">
								<span class="d:flex jc:center ai:center fz:22px">
									<i class="{{iconArrowLeft}}"></i>
								</span>
							</button>
						</div>
						<div class="pos:absolute r:2px b:2px z:9 d:none@+md">
							<button class="wil-animated-slider__arrow-right wiloke-2__arrow-right fz:22px w:pfs(50px,70px) trs:0.4s h:pfs(50px,70px) cur:pointer" style="{{colorPrimaryVariable}} {{colorLightVariable}} {{colorGray9Variable}}">
								<span class="d:flex jc:center ai:center fz:22px">
									<i class="{{iconArrowRight}}"></i>
								</span>
							</button>
						</div>
					</div>

				</div>
			</div>
	</div>

{% endif %}
